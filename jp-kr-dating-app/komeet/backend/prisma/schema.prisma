model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  age       Int?
  gender    String?
  preferences String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Match {
  id        Int      @id @default(autoincrement())
  userId1   Int
  userId2   Int
  createdAt DateTime @default(now())
  
  user1     User     @relation("UserMatches1", fields: [userId1], references: [id])
  user2     User     @relation("UserMatches2", fields: [userId2], references: [id])
}

model Message {
  id        Int      @id @default(autoincrement())
  matchId   Int
  senderId  Int
  content   String
  createdAt DateTime @default(now())

  match     Match     @relation(fields: [matchId], references: [id])
  sender    User      @relation(fields: [senderId], references: [id])
}